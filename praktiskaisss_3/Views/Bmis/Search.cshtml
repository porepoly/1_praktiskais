@model IEnumerable<_1_praktiskais.Models.Bmi>
@{
    ViewData["Title"] = "Search";
}

<h1>Search BMI</h1>

<form method="post">
    <input type="text" name="query" placeholder="Ievadi id, augumu vai svaru" />
    <button type="submit">Meklet</button>
</form>

@if (ViewBag.Message != null)
{
    <p>@ViewBag.Message</p>
}

@if (Model != null && Model.Any())
{
    <table>
        <tr>
            <th>ID</th>
            <th>Augums</th>
            <th>Svars</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Augums</td>
                <td>@item.Svars</td>
            </tr>
        }
    </table>
}

